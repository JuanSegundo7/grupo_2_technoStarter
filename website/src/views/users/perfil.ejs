<html lang="en">
    <%-include("../partials/head",{"css":["header", "perfil", "footer"]})%>
    <body>
        <%-include("../partials/header")%> 
        <main>
            <section>
                <h2>Tu perfil</h2>
            </section>
            <section class="formulario">
                <form>
                        <section id="flex-avatar">
                            <figure id="avatarPreview">
                                <img src="/uploads/avatars/<%= user.avatar%>" alt="<%= user.nombre%>">     
                            </figure>
                            <article>
                                <h4>Nombre:</h4>
                                <%= user.nombre%>
                            </article>
                            <article>
                                <h4>Apellido:</h4>
                                <%= user.apellido%>
                            </article>
                            <article>
                                <h4>Email:</h4>
                                <%= user.email%>
                            </article>
                            <article>
                                <h4>Ubicacion:</h4>
                                <%= user.ubicacion%>
                            </article>
                        </section>
                    </form>
            </section> 
            <section>
                <h2>Proyectos Guardados</h2>
                <section id="proyectosGuardados">
                    
                </section>
            </section>
        </main>
        <%- include("../partials/footer")  %> 
    </body>
    </html>